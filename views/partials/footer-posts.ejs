<footer class="footer">

  <div>
    <ul class="footer__tabs">
      <!-- <li><a href="/" class="footer__tab footer__tab--active">Everything</a> -->
      <% postsNavigation.forEach(function(item) { %>
      <li class="footer__tab"><a href="<%= item.url %>"><%= item.label %></a></li>
      <% }) %>
    </ul>
  </div>

  <div class="footer__bottom">
    <div class="footer__search">
      <form action="search" method="get" class="form">
        <input type="text" name="term" class="form__field form__field--sm" placeholder="Search" tabindex="-1">
      </form>
    </div>

    <% if (sails.config.globals.settings.allowPublicAccounts) { %>
    <div class="footer__links">
      <a href="/login" class="footer__link">Login</a>
      <a href="/register" class="footer__link">Create Account</a>
    </div>
    <% } %>
  </div>
</footer>
