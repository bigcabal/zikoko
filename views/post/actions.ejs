<form action="/post/likePost" method="post" class="post__actions">

  <!-- Hidden field, don't touch -->
  <input type="hidden" name="post_id" value="<%= post.id %>">

  <button type="submit" class="post-action button button--no-pad button--clear">
    <span class="post-action-icon post-action-icon--like"></span>
    <span>Like</span>
  </button>
  
  <a href="/post/<%= post.id %>#comments" class="post-action button button--no-pad button--clear">
    <span class="post-action-icon post-action-icon--comment"></span> Comment
  </a>
  
  <!-- Use this to replace Like & Comment on single post page if User is the Post Author-->
