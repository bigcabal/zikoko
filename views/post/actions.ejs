<% if (sails.config.globals.settings.allowPublicAccounts) { %>
<form action="/post/like" method="post" class="post-actions js-likePostForm">

  <!-- Hidden fields, don't touch -->
  <input type="hidden" name="post_id" value="<%= post.id %>">
  <input type="hidden" name="post_slug" value="<%= post.slug %>">

  <button class="post-action post-action--margin-right button button--no-pad button--clear" href="#" class="post-action">
      <span class="post-action-icon post-action-icon--<%= post.has_liked ? 'liked': 'like'%>">
          <%- partial('../components/icons/post/like.ejs') %>
      </span>
      <span class="post-action-text"><%= post.likes_count === 0 ? 'Like' : UtilsService.truncatedCount(post.likes_count) %></span>
  </button>

  <a href="/post/<%= post.slug %>#comments" class="post-action button button--no-pad button--clear">
      <span class="post-action-icon post-action-icon--comment">
         <%- partial('../components/icons/post/comment.ejs') %>
      </span>
      <span class="post-action-text">Comment</span>
  </a>

</form>
<% } else { %>
<div class="post-actions">
  <a href="/post/<%= post.slug %>#comments" class="post-action button button--no-pad button--clear">
      <span class="post-action-icon post-action-icon--comment">
         <%- partial('../components/icons/post/comment.ejs') %>
      </span>
    <span class="post-action-text">Comment</span>
  </a>
</div>
<% } %>
