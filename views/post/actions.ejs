<form action="/post/like" method="post" class="post__actions js-likePostForm">

  <!-- Hidden field, don't touch -->
  <input type="hidden" name="post_id" value="<%= post.id %>">

  <button type="submit" class="post-action button button--no-pad button--clear">
    <span class="post-action-icon post-action-icon--like"></span>
    <span>Like</span>
  </button>

  <a href="/post/<%= post.slug %>#comments" class="post-action button button--no-pad button--clear">
    <span class="post-action-icon post-action-icon--comment"></span> Comment
  </a>
</form>
